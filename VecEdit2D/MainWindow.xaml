<Window x:Class="VecEdit2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VecEdit2D"
        mc:Ignorable="d"
        Title="MainWindow" Height="950" Width="1200">
    <Window.Resources>
        <ContextMenu x:Key="CanvasContextMenu">
            <MenuItem Header="Translate" Click="MenuItem1_Click"/>
            <MenuItem Header="Rotate" Click="MenuItem1_Click"/>
            <MenuItem Header="Scale" Click="MenuItem2_Click"/>
            <MenuItem Header="Set color" Click="MenuItem2_Click"/>
            <MenuItem Header="Set outline" Click="MenuItem2_Click"/>
            <Separator />
            <MenuItem Header="Remove filling" Click="MenuItem2_Click"/>
            <MenuItem Header="Remove outline" Click="MenuItem2_Click"/>
            <Separator />
            <MenuItem Header="Remove figure" Click="MenuItem2_Click"/>

        </ContextMenu>
    </Window.Resources>
    <Canvas Name="MainCanvas" Background="white" MouseLeftButtonDown="HandleLMBClick" MouseRightButtonDown="HandleRMBClick" Focusable="True" Margin="0,0,0,0"/>
</Window>
